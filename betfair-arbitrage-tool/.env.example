# Betfair API Credentials
BETFAIR_USERNAME=your_username
BETFAIR_PASSWORD=your_password
BETFAIR_APP_KEY=your_app_key
BETFAIR_CERT_FILE=path/to/your/certificate.crt
BETFAIR_KEY_FILE=path/to/your/key.key

# API Endpoints
BETFAIR_API_URL=https://api.betfair.com/exchange/betting/rest/v1.0/
BETFAIR_LOGIN_URL=https://identitysso-cert.betfair.com/api/certlogin

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/betfair_arbitrage

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=True

# Monitoring Settings
MIN_ARBITRAGE_PROFIT=0.5  # Minimum profit percentage for arbitrage alerts
MIN_VALUE_BET_EDGE=2.0    # Minimum edge percentage for value bet alerts
MAX_STAKE=1000            # Maximum stake per bet
UPDATE_INTERVAL=10        # Market update interval in seconds

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/betfair_arbitrage.log